{{#section 'personMyOrderCss'}}
    <link rel="stylesheet" href="stylesheets/person/personMyOrder.css"/>
{{/section}}

<!--我的订单部分-->
<div class="myOrder" id="myOrder" ng-controller="personOrder as Ctrl">
    <!--标题-->
    <div class="myOrderTitle">
        <p>我的订单</p>
    </div>
    <!--详细-->
    <div class="myOrderContent">
        <!--订单标题-->
        <div class="goodsTitle">
            <ul>
                <li id="goodsTitleName">商品</li>
                <li id="goodsTitleNumber">订单号</li>
                <li id="goodsTitlePrice">价格（元）</li>
                <li id="goodsTitleStatus">状态</li>
                <li id="goodsTitleOperate">操作</li>
            </ul>
        </div>
        <!--订单表格-->
        <div class="goodsTable" ng-repeat="orderData in Ctrl.data track by $index">
            <table border="1">
                <tr>
                    <td id="goodsTablePicture">
                        <div class="goodsTablePictureImg">
                            <img src="\{{orderData.orderImg}}"  width="100%" height="100%" alt="computer"/>
                        </div>
                        <div class="goodsTablePictureContent">
                            <p>\{{orderData.orderTitle}}</p>
                        </div>
                    </td>
                    <td id="goodsTableOrderNumber">
                        <p>\{{orderData.orderNumber}}</p>
                    </td>
                    <td id="goodsTablePrice">
                        <p>\{{orderData.orderPrice}}</p>
                    </td>
                    <td id="goodsTableStatus">
                        <p>\{{orderData.orderStatus}}</p>
                    </td>
                    <td id="goodsTableOperate">
                        <div class="goodsTableOperateBtn">
                            <button type="button" style="width:100%;height:100%;">\{{orderData.orderBtn}}</button>
                        </div>
                    </td>
                </tr>
            </table>
        </div>
    </div>
</div>

{{#section 'personMyOrderJs'}}
    <script src="javascript/person/personMyOrder.js"></script>  <!--我的订单js-->
{{/section}}