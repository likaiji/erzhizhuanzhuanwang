<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>二师转转网后台</title>
    <link type="text/css" rel="stylesheet" href="stylesheets/reset.css">
    <link rel="stylesheet" href="stylesheets/back/backLogin.css"/>
    <link rel="stylesheet" href="vendor/bootstrap/dist/css/bootstrap.min.css"/>
</head>
<body ng-app="backLogin">
<!--大背景-->
<div class="back">
    <div class="container">
        <!--登录框-->
        <div class="loginBox">
            <!--标题-->
            <div class="loginBoxTitle">
                <p>欢迎进入二师转转网后台界面</p>
            </div>
            <!--输入框-->
            <div class="loginBoxInput" ng-controller="backLoginSubmit as Ctrl">

                <form action="/backLogin" method="post" class="form-horizontal backForm" name="backForm">
                    <!--用户名框-->
                    <div class="form-group">
                        <label class="col-sm-3 control-label usertext">用&nbsp;户&nbsp;名</label>
                        <div class="col-sm-9">
                            <input type="text"  class="form-control" name="backUserName" placeholder="用户名"
                                   ng-minlength="4"
                                   required
                                   ng-model="backUserName"
                                    />
                        </div>
                    </div>

                    <!--密码框-->
                    <div class="form-group">
                        <label class="col-sm-3 control-label usertext">密&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;码</label>
                        <div class="col-sm-9">
                            <input type="password" class="form-control" name="backPassword" placeholder="密码"
                                   ng-minlength="4"
                                   required
                                   ng-model="backPassword" />
                        </div>
                    </div>

                    <!--确认密码框-->
                    <div class="form-group">
                        <label class="col-sm-3 control-label usertext">确认密码</label>
                        <div class="col-sm-9">
                            <input type="password" class="form-control" name="backPasswordSure" placeholder="确认密码"
                                   ng-minlength="4"
                                   required
                                   ng-model="backPasswordSure" />
                        </div>
                    </div>

                    <!--登陆按钮-->
                    <div class="form-group">
                        <div class="col-sm-7 col-sm-offset-3">
                            <input type="submit" class="col-sm-4 btn btn-default" id="backLogin"
                                   ng-disabled="backForm.$invalid" value="注册"/>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<script src="vendor/angular/angular.min.js"></script>
<script>
    angular.module('backLogin',[])
            .controller('backLoginSubmit',['$http',function($http){
                var self=this;
            }]);
</script>
</body>
</html>