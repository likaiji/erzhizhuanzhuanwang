        //更改导航栏
        document.getElementById("cqueContact").style.color="#4EC487";

        var app=angular.module('CQUE',[]); //定义ng-app
        app.controller('cqueSendEmail',['$http',function($http){
//        alert("aaa");  //在这里最直接写表示运行angular是就会直接运行
            var self=this;
        }]);
    </script>
{{/section}}


