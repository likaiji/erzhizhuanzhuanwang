<body ng-app="CQUE">


<!--点击 加入购物车 出现模态框-->
<!-- 模态框（Modal） -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
                    &times;
                </button>
                <h4 class="modal-title" id="myModalLabel">
                    加入购物车
                </h4>
            </div>
                <div class="modal-body goodCarsMotai">
                    <p>商品名称：<span id="goodsTileMotai"></span></p>
                    <p>商品价格：<span id="goodsPriceMotai"></span></p>
                    <p>收货人姓名：<input type="text" id="goodCarUsername"/></p>
                    <p>收货人地址：<input type="text" id="goodCarAddress"/></p>
                    <p>收货人电话：<input type="text" id="goodCarPhone"/></p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">取消订单
                    </button>
                    <button type="submit" class="btn btn-primary" id="btnCars">
                        提交订单
                    </button>
                </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal -->
</div>





<!--定义一个导航栏-->
<nav class="navbar navbar-default u-nav-bar">
    <!--定义一个容器-->
    <div class="container">
        <!--定义一行-->
        <div class="row">
            <!--定义左边的的logo-->
            <div class="navbar-header">
                <a class="navbar-brand" href="/">
                    <div class="logo-pc-div app-none">
                        <figure class="ac-familybrowser-icon"></figure>  <!--使用 <figure> 元素标记文档中的一个图像-->
                    </div>
                </a>
            </div>

            <!--定义右边的导航框-->
            <div class="collapse navbar-collapse topBarRight">
                <ul class="nav navbar-nav navbar-nav-ul">
                    <li><a href="/"><span id="cqueIndex">首页</span></a></li>
                    <li><a href="/computer"><span id="cqueComputer">电脑数码</span></a></li>
                    <li><a href="/clothes"><span id="cqueClothes">衣服书籍</span></a></li>
                    <li><a href="/contact"><span id="cqueContact">联系我们</span></a></li>
                </ul>

                <!--靠右边的表单系统-->
                <form class="navbar-form navbar-right navbar-form-link">
                    <a class="pc-none" href="/login">登录</a>
                    <a class="pc-none" href="/register">注册</a>
                </form>
            </div>

        </div>
    </div>
</nav>



