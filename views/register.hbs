{{#section 'registerCss'}}
<!--handlebars默认在public下,所以直接引用-->
<link rel="stylesheet" href="stylesheets/login.css"/>  <!--背景css-->
<link rel="stylesheet" href="stylesheets/register.css"/> <!--注册css-->
{{/section}}

<!--登录框大的div-->
<div class="loginBox" id="loginBox">
    <!--container 居中-->
    <div class="container">
        <!--包裹bootstrap框的div-->
        <div class="registerBoxContent">
            <p style="font-size: 20px;text-align: center;padding-top: 10px;">注册账号</p>
            <!--登录框-->
            <form action="/login" name="registerForm" class="form-horizontal formMarginTop" role="form" method="post"
                  onSubmit="return registerCheck();">
                <!--定义一行用户名-->
                <div class="form-group">
                    <label for="userName" class="col-sm-3 control-label">用户名</label>
                    <div class="col-sm-8">
                        <input type="text" class="form-control" id="registerUserName" name="registerUserName" placeholder="用户名"/>
                    </div>
                </div>

                <!--定义一行密码-->
                <div class="form-group">
                    <label for="passWord" class="col-sm-3 control-label">密 码</label>
                    <div class="col-sm-8">
                        <input type="password" class="form-control" id="registerPassword" name="registerPassword" placeholder="密码"/>
                    </div>
                </div>

                <!--确认密码-->
                <div class="form-group">
                    <label for="password" class="col-sm-3 control-label">确认密码</label>
                    <div class="col-sm-8">
                        <input type="password" class="form-control" id="registerPasswordSure" name="registerPasswordSure" placeholder="确认密码"/>
                    </div>
                </div>

                <!--手机号-->
                <div class="form-group">
                    <label for="phone" class="col-sm-3 control-label">手机号</label>
                    <div class="col-sm-8">
                        <input type="text" class="form-control" id="registerphone" name="registerphone" placeholder="手机号"/>
                    </div>
                </div>

                <!--注册按钮-->
                <div class="form-group">
                    <div class="col-sm-10 col-md-offset-3">
                        <button type="submit" class="col-sm-4 btn btn-default">注册</button>
                        <div class="col-sm-8">
                            <label id="passwordError" >两次密码输入不相符</label>
                            <label id="phoneError" >手机号格式错误</label>
                            <label id="doubleError" >密码不符 手机格式错误</label>
                            <label id="inputNull" >输入不能为空</label>
                        </div>
                    </div>
                </div>

             </form>

         </div>

    </div>
</div>

{{#section 'registerJs'}}
    <script src="javascript/login.js"></script>  <!--换背景图片js-->
    <script src="javascript/register.js"></script>  <!--验证js-->
{{/section}}
